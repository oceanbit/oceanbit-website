---
import TestDropdown from "./test-dropdown.astro";
---

<header class="container">
  <div class="logoContainer">
    <img src="/logo.svg" alt="An ocean wave contained in an invisible box" />
    <span class="logoText">OceanBit</span>
  </div>
  <div class="centerArea">
    <nav class="navContainer">
      <button class="">Home</button>
      <button class="">Solutions</button>
      <TestDropdown />
      <button class="">About us</button>
    </nav>
  </div>
  <div class="rightArea">
    <button>Contact us</button>
  </div>
</header>

<style>
  .container {
    padding: 12px 32px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr;
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
  }

  .centerArea {
    display: flex;
    justify-content: center;
  }

  .rightArea {
    display: flex;
    justify-content: end;
  }

  .logoContainer {
    display: inline-flex;
    align-items: center;
  }

  .logoText {
    font-family: Epilogue, sans-serif;
    font-weight: 600;
    font-size: 1.25rem;
    line-height: 1.75rem;
    margin: 0px 0px 0px 8px;
  }

  .navContainer {
    display: inline-flex;
    padding: 4px;
    justify-content: center;
    align-items: center;
    gap: 8px;
    border-radius: 9999px;
    border: 1px solid #d0d5dd;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(20px);
  }
</style>
