---
import styles from "./ob-button.module.scss";

interface Props {
  disabled?: boolean;
  className?: string;
  href: string;
  as?: string | undefined;
}

const { disabled, className = "", as: As = "a", href } = Astro.props;
---

<As href={href} disabled={disabled} class={`${styles.button} ${className}`}>
  <slot />
</As>
