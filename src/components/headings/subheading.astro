---
interface Props {
  as?: string | undefined;
}

const { as: As = "h2" } = Astro.props;
---

<As class="subheader"><slot /></As>

<style>
  .subheader {
    margin: 0;
    color: var(--colors-label-label-brand-primary-600, #0091f3);
    text-align: center;

    /* Text sm/Semibold */
    font-family: var(--family-body, "Geist variable");
    font-size: var(--size-text-sm, 0.875rem);
    font-style: normal;
    font-weight: 600;
    line-height: var(--line-height-text-sm, 1.25rem); /* 142.857% */
  }
</style>
