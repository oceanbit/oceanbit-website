---
import Header from "../../components/header/header.astro";
import Document from "../../layouts/document.astro";
import Hero from "./sections/hero/hero.astro";
import ClientLogos from "./sections/client-logos/client-logos.astro";
import WhatWeOffer from "./sections/what-we-offer/what-we-offer.astro";
import SolveProblems from "./sections/solve-problems/solve-problems.astro";
import FlickerBg from "./components/flicker-bg/flicker-bg.astro";
---

<Document>
  <Header />
  <main>
    <Hero />
    <ClientLogos />
    <WhatWeOffer />
    <SolveProblems />
    <div
      style="max-width: 94.5rem; width: 100%;height: 13rem;margin: 0 auto;margin-top: 4rem;mask-image: linear-gradient(to right, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 30%, rgba(0, 0, 0, 1) 70%, rgba(0, 0, 0, 0) 100%);"
    >
      <FlickerBg />
    </div>
    <div style="margin-bottom: 150rem"></div>
  </main>
</Document>
